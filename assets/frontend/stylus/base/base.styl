      position absolute
      right -31%
      top 90%
      transform translateY(-50%)
      z-index -1
      xl(right, calc((-18vw * 1) + 93px))
      lg(right, calc((-28vw * 1) + 230px))
      md(right, calc((-28vw * 1) + 180px))
      sm(right, calc((-20vw * 1) + 110px))
      xs(right, calc((15vw * 1) + -57px))
    .structureBlockRowItem__content
