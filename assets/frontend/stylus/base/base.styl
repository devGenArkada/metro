  display flex
  justify-content center
  margin-bottom 110px
  md(justify-content, space-between)
.structureBlockRow--head
  md(justify-content, center)  
  .structureBlockRowItem
    position relative
    z-index 2
    &::before
      content url('../images/icons/arrow-down2.svg')
      position absolute
      left -31%
      top 90%
      transform translateY(-50%)
      z-index -1
      xl(left, calc((-18vw * 1) + 93px))
      lg(left, calc((-28vw * 1) + 230px))
      md(left, calc((-28vw * 1) + 180px))
      sm(left, calc((-20vw * 1) + 110px))
