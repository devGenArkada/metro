
/* POPUP */

.popup
  display none
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  background rgba(255,255,255,.95)
  z-index 99
  min-height 52rem
  
  &__layer
    position absolute
    left 0
    top 0
    width 100%
    height 100%
  
  &__box
    position absolute
    left 50%
    top 50%
    transform translate(-50%,-50%)
    width: 100%;
    
  &__closer
    position absolute
    z-index 2
    top: 1rem;
    right: 2rem;
    width 5rem
    height 5rem
    
    &:before,
    &:after
      content ""
      position absolute
      left 0
      top: 50%;
      width 100%
      height .2rem
      background #24272b
      border-radius .2rem
      transition .3s background
      
    &:hover:before,
    &:hover:after
      @media (hover: hover) and (min-width: $widthMobile)
        background #6cab64

    &:before
      transform rotate(-45deg)

    &:after
      transform rotate(45deg)

  &__form
    max-width 28rem
    margin 0 auto

  &__input
    margin 2.4rem 0 0
    height 5.8rem
    font-size: 1.8rem;