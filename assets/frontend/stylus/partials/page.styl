/* COMMON */

.button
  display: block
  background: #25BFEF
  color: #fff
  border-radius: 5px;
  border 1px solid #25BFEF
  text-align: center
  letter-spacing: 0.04rem
  transition .27s all

  &.disabled
    opacity .55
    
    &:hover
      background: #25BFEF
      color: #fff
      cursor default

  &:hover
    @media (hover: hover) and (min-width: $widthMobile)
      color: #25BFEF
      background: transparent

.nav
  display flex
  align-items: center;
  flex-direction: column;
  width: 100%;
  gap: 8px 0;
  
  @media (min-width: $widthMobile)
    flex-direction: row
    text-align: center
    justify-content space-between
    padding: 0

  &__link
    position: relative
    line-height: 1.7;
    font-size: countFontSize(28)
  
    @media (min-width: $widthMobile)
      line-height: 1.28;
      font-size: inherit

    &:before
      @media (min-width: $widthMobile)
        content: ""
        position: absolute
        width: 100%
        height: 1px
        border-radius: 2px
        bottom 0
        left: 0
        background: transparent
        transition .27s all

    &:hover:before
      @media (hover: hover) and (min-width: $widthMobile)
        background: #232323
  
    @media (min-width: $widthMobile)
      padding: 0
      
    &:hover
      @media (hover: hover) and (min-width: $widthMobile)
        border-color #fff






/* SLIDER */

.slider
  position relative
  width 100%
  overflow hidden
  padding 0 0 countVW(55)
  z-index 1
  touch-action pan-y
  max-width: 1000px

  &__box
    //width: 100%;
    height: 100%;
    position: relative;
    z-index: 1;
    display: flex;
    transition-property: transform;
    box-sizing: content-box;
    transform: translate3d(0,0,0);

  &__item
    transition-property: transform;
    flex-shrink: 0;
    display flex
    flex-direction: column;
    cursor: ew-resize

  &__nav
    position absolute
    left 0
    right 0
    bottom 0
    z-index: 2;

  &__btn
    position absolute
    bottom 0
    cursor pointer
    height 20px
    width: 9px

    &--left
      right 31px
      border-radius: 1px

    &--right
      right 0
      transform rotate(-180deg)

  &__ico
    width 100%
    height 100%





